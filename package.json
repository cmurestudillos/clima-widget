{
  "name": "clima",
  "private": true,
  "version": "2.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "prerelease": "vite build && electron-builder --dir",
    "release": "vite build && electron-builder"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "dotenv": "^16.4.5",
    "font-awesome": "^4.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "concurrently": "^9.2.1",
    "electron": "^29.1.0",
    "electron-builder": "^24.12.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^60.8.3",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.6.2",
    "vite": "^5.1.4",
    "vite-plugin-commonjs": "^0.10.1",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.cmurestudillos.clima",
    "productName": "Clima Weather App",
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release/",
      "buildResources": "src/assets"
    },
    "mac": {
      "category": "public.app-category.weather",
      "icon": "src/assets/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "src/assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "src/assets/icon.png",
      "category": "Utility",
      "target": [
        "AppImage"
      ]
    }
  }
}
